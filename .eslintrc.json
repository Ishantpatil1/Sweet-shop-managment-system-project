{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["server/**/*.js"],
      "env": { "node": true },
      "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "prettier"
      ],
      "rules": {}
    },
    {
      "files": ["web/**/*.js", "web/**/*.jsx"],
      "env": { "browser": true },
      "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "prettier"
      ]
    }
  ]
}