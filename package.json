{
  "name": "sweet-shop-management",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:web",
    "dev:server": "npm --workspace server run dev",
    "dev:web": "npm --workspace web run dev",
    "test": "npm-run-all -s test:server test:web",
    "test:server": "npm --workspace server test",
    "test:web": "npm --workspace web test",
    "build": "npm-run-all -s build:server build:web",
    "build:server": "npm --workspace server run build",
    "build:web": "npm --workspace web run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}